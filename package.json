{
  "name": "schemascii",
  "version": "1.0.0",
  "description": "Convert JSON, JSONC, YAML, or XML file structure to ASCII directory tree",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "schemascii": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "npm run test:shallow:json && npm run test:medium:json && npm run test:deep:json && npm run test:mixed:json && npm run test:shallow:jsonc && npm run test:medium:jsonc && npm run test:deep:jsonc && npm run test:shallow:yaml && npm run test:medium:yaml && npm run test:deep:yaml && npm run test:shallow:xml && npm run test:medium:xml && npm run test:deep:xml && npm run test:characters && npm run test:maxdepth",
    "test:shallow:json": "echo \"=== shallow.json ===\" && node dist/cli.js examples/shallow.json",
    "test:medium:json": "echo \"\\n=== medium.json ===\" && node dist/cli.js examples/medium.json",
    "test:deep:json": "echo \"\\n=== deep.json ===\" && node dist/cli.js examples/deep.json",
    "test:mixed:json": "echo \"\\n=== mixed.json ===\" && node dist/cli.js examples/mixed.json",
    "test:shallow:jsonc": "echo \"\\n=== shallow.jsonc ===\" && node dist/cli.js examples/shallow.jsonc",
    "test:medium:jsonc": "echo \"\\n=== medium.jsonc ===\" && node dist/cli.js examples/medium.jsonc",
    "test:deep:jsonc": "echo \"\\n=== deep.jsonc ===\" && node dist/cli.js examples/deep.jsonc",
    "test:shallow:yaml": "echo \"\\n=== shallow.yaml ===\" && node dist/cli.js examples/shallow.yaml",
    "test:medium:yaml": "echo \"\\n=== medium.yaml ===\" && node dist/cli.js examples/medium.yaml",
    "test:deep:yaml": "echo \"\\n=== deep.yaml ===\" && node dist/cli.js examples/deep.yaml",
    "test:shallow:xml": "echo \"\\n=== shallow.xml ===\" && node dist/cli.js examples/shallow.xml",
    "test:medium:xml": "echo \"\\n=== medium.xml ===\" && node dist/cli.js examples/medium.xml",
    "test:deep:xml": "echo \"\\n=== deep.xml ===\" && node dist/cli.js examples/deep.xml",
    "test:characters": "echo \"\\n=== Testing Alternative Characters ===\" && node test-characters.js",
    "test:maxdepth": "echo \"\\n=== Testing Max Depth ===\" && node test-maxdepth.js"
  },
  "keywords": [
    "json",
    "jsonc",
    "yaml",
    "xml",
    "tree",
    "directory",
    "ascii",
    "cli",
    "schema"
  ],
  "author": "Drew Daniels",
  "repository": "Drew-Daniels/schemascii",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/strip-json-comments": "^0.0.30",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "fast-xml-parser": "^5.3.2",
    "js-yaml": "^4.1.1",
    "strip-json-comments": "^5.0.3"
  }
}
